<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_music_cover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/textBlack"
        android:textSize="16sp"
        android:text="@{viewModel.musicTitle}"
        app:layout_constraintStart_toEndOf="@+id/img_music_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/textDarkGrey"
        android:textSize="13sp"
        android:text="@{viewModel.musicArtist}"
        app:layout_constraintStart_toEndOf="@+id/img_music_cover"
        app:layout_constraintTop_toBottomOf="@+id/txt_music_title" />

</androidx.constraintlayout.widget.ConstraintLayout>